<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/root_action_bar">

           <LinearLayout
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_back_arrow"
                android:tint="@color/pure_black"
                android:id="@+id/back"
                android:padding="5dp"/>
           </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="@string/setting"
                android:paddingRight="15dp"

                android:layout_weight="1"

                android:id="@+id/tv_toolbar_text"
                android:textColor="@color/pure_black"
                android:gravity="end|center_vertical"
                android:textStyle="bold"/>


        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:alpha="0.8"
                    android:orientation="vertical"
                    android:background="@color/pure_white"
                    android:gravity="start|center_vertical">

                    <com.apporio.taasdriver.typeface.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="@string/SETTINGS_ACTIVITY_app_settings"
                        android:textColor="@color/pure_black"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/pure_black"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_language_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/pure_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_language"
                        android:tint="@color/pure_black" />

                    <com.apporio.taasdriver.typeface.TypefaceTextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="@string/change_language"
                        android:textColor="@color/pure_black"
                        android:textSize="@dimen/menu_settings_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:alpha="0.8"
                    android:background="@color/pure_white"
                    android:gravity="start|center_vertical"
                    android:orientation="vertical">

                    <com.apporio.taasdriver.typeface.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="@string/SETTINGS_ACTIVITY_support_settings"
                        android:textColor="@color/pure_black"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/pure_black"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_customer_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/pure_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_customer_support"
                        android:tint="@color/pure_black" />

                    <com.apporio.taasdriver.typeface.TypefaceTextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="@string/MAIN_ACTIVITY__customer_support"
                        android:textColor="@color/pure_black"
                        android:textSize="@dimen/menu_settings_text_size" />
                </LinearLayout>




                <LinearLayout
                    android:id="@+id/ll_report_issue_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/pure_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_comment"
                        android:tint="@color/pure_black" />

                    <com.apporio.taasdriver.typeface.TypefaceTextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="@string/report_a_problem"
                        android:textColor="@color/pure_black"
                        android:textSize="@dimen/menu_settings_text_size" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:alpha="0.8"
                    android:background="@color/pure_white"
                    android:gravity="start|center_vertical"
                    android:orientation="vertical">

                    <com.apporio.taasdriver.typeface.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="@string/SETTINGS_ACTIVITY_information_settings"
                        android:textColor="@color/settings_strip_text_color"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/pure_black"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_terms_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/pure_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_term_c"
                        android:tint="@color/color_menu_icon"
                        android:visibility="visible" />

                    <com.apporio.taasdriver.typeface.TypefaceTextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="@string/MAIN_ACTIVITY__terms_and_condition"
                        android:textColor="@color/color_menu_text"
                        android:textSize="@dimen/menu_settings_text_size" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_about_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/pure_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_about_us"
                        android:tint="@color/color_menu_icon"
                        android:visibility="visible" />

                    <com.apporio.taasdriver.typeface.TypefaceTextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="@string/MAIN_ACTIVITY__about_us"
                        android:textColor="@color/color_menu_text"
                        android:textSize="@dimen/menu_settings_text_size" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/pure_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_version"
                        android:tint="@color/color_menu_icon"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical">

                        <com.apporio.taasdriver.typeface.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/MAIN_ACTIVITY__versions"
                            android:textColor="@color/color_menu_text"
                            android:textSize="@dimen/menu_settings_text_size" />

                        <com.apporio.taasdriver.typeface.TypefaceTextView
                           android:id="@+id/textView_version_name"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="(0.5)"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/color_menu_text"
                            android:textSize="@dimen/menu_settings_text_size" />


                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</LinearLayout>
