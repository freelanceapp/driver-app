<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center|top"
    android:id="@+id/root">



    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/root_action_bar">

               <LinearLayout
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:orientation="vertical"
                   android:gravity="center">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_back_arrow"
                    android:tint="@color/colorPrimary"
                    android:id="@+id/back"
                    android:padding="5dp"/>
               </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text=""
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/activity_name"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="right|end|center_vertical"/>


                <ImageView
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:src="@drawable/ic_refresh"
                    android:padding="6dp"
                    android:id="@+id/refresh"
                    android:visibility="gone"/>
            </LinearLayout>

            <!--<android.support.v7.widget.CardView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--app:cardCornerRadius="5dp"-->
                <!--android:layout_height="wrap_content">-->

                <com.ogaclejapan.smarttablayout.SmartTabLayout
                    android:id="@+id/viewpagertab"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:background="@color/pure_white"
                    app:stl_indicatorAlwaysInCenter="false"
                    app:stl_indicatorWithoutPadding="false"
                    app:stl_indicatorInFront="false"
                    app:stl_indicatorInterpolation="smart"
                    app:stl_indicatorGravity="bottom"
                    app:stl_indicatorColor="@color/pure_black"
                    app:stl_indicatorThickness="3dp"
                    app:stl_indicatorWidth="auto"
                    app:stl_indicatorCornerRadius="5dp"
                    app:stl_overlineColor="@color/pure_white"
                    app:stl_overlineThickness="2dp"
                    app:stl_underlineColor="#bbbbbb"
                    app:stl_underlineThickness="0dp"
                    app:stl_dividerColor="@color/pure_black"
                    app:stl_dividerThickness="0dp"
                    app:stl_defaultTabBackground="?attr/selectableItemBackgroundBorderless"
                    app:stl_defaultTabTextAllCaps="false"
                    app:stl_defaultTabTextColor="@color/pure_black"
                    app:stl_defaultTabTextSize="12sp"
                    app:stl_defaultTabTextHorizontalPadding="16dp"
                    app:stl_defaultTabTextMinWidth="0dp"
                    app:stl_distributeEvenly="true"
                    app:stl_clickable="true"
                    app:stl_titleOffset="24dp"
                    app:stl_drawDecorationAfterTab="false"
                    />

            <!--</android.support.v7.widget.CardView>-->



        </LinearLayout>



    </android.support.v7.widget.CardView>


    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>
