<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_red_destination_marker">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/icons_8_muted_red">


                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:maxLines="2"
                    android:id="@+id/destination_txt"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginRight="3dp"
                    android:textSize="10dp"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/icons_8_muted_red"
            android:layout_marginTop="-11dp"
            android:src="@drawable/ic_pin"/>
    </LinearLayout>



</RelativeLayout>