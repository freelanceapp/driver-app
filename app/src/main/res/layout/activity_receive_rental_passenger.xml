<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:background="@color/pure_white"
    tools:context="com.taas.driver.ReceiveRentalPassengerActivity">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center|top">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/car_type_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_demo_car"
                app:civ_border_color="@color/light_gray"
                app:civ_border_width="1.5dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="top|left"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__rentals"
                        android:textColor="@color/pure_black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:visibility="gone"
                        android:id="@+id/cateory_etyp_txt"/>
                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----------"
                        android:textSize="14sp"
                        android:id="@+id/car_type_name_txt"
                        android:textColor="@color/green"/>
                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----------"
                        android:textSize="14sp"
                        android:id="@+id/car_type_sub_name_txt"
                        android:textColor="@color/pure_black"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__package"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:textSize="18dp"/>
                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--------"
                        android:id="@+id/package_txt"
                        android:textColor="@color/pure_black"/>
                </LinearLayout>



            </LinearLayout>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/pure_black"
            android:layout_margin="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__time"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:id="@+id/_time_of_booking_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-------"
                    android:textColor="@color/pure_black"
                    android:textSize="16sp" />


                <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__package_price"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:id="@+id/eta_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    android:textColor="@color/pure_black"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:layout_gravity="top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_bg_color_red"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/reject_btn"
                    android:orientation="vertical">

                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__ignore"
                        android:textColor="@color/pure_white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp">


            <customviews.progresswheel.ProgressWheel
                android:id="@+id/activity_countdown_timer_days"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible"
                android:tag="Thin"
                ProgressWheel:barColor="@color/green"
                ProgressWheel:barWidth="6dp"
                ProgressWheel:rimColor="@color/dark_gray"
                ProgressWheel:rimWidth="3dp"
                ProgressWheel:textColor="@color/pure_white"
                ProgressWheel:textSize="24sp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/map_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@color/pure_black"
                android:alpha="0.6"
                />



            <customviews.PulsatorLayout
                android:id="@+id/pulsator"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:pulse_count="1"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="6dp"
                app:pulse_duration="800"
                app:pulse_repeat="1"
                app:pulse_color="@color/colorPrimary"
                app:pulse_startFromScratch="false"
                app:pulse_interpolator="Linear"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="20dp"/>


            <!--<RelativeLayout-->
            <!--android:layout_width="250dp"-->
            <!--android:layout_height="250dp"-->
            <!--android:paddingTop="20dp"-->
            <!--android:background="@color/pure_black"-->
            <!--android:alpha="0.4"-->
            <!--&gt;-->
            <ImageView
                android:id="@+id/notificationBell"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/pure_white"
                android:src="@drawable/ic_notification_bell"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                />
            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:tint="@color/pure_white"
                android:src="@drawable/taas_driver_logo_white"
                android:layout_below="@+id/notificationBell"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"

                />

            <com.taas.driver.typeface.TypeFaceMuseoRegular
                android:id="@+id/time_txt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/pure_white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <!--</RelativeLayout>-->
        </FrameLayout>
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/icons_8_muted_green_1"
                app:civ_border_width="4dp"/>


            <customviews.PulsatorLayout
                android:layout_width="220dp"
                android:layout_height="220dp"
                app:pulse_count="1"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="6dp"
                app:pulse_duration="800"
                app:pulse_repeat="1"
                app:pulse_color="@color/colorPrimary"
                app:pulse_startFromScratch="false"
                app:pulse_interpolator="Linear"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="20dp"/>


            <com.taas.driver.typeface.TypeFaceMuseoRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@color/icons_8_muted_blue"
                android:textStyle="bold"
                android:textSize="100dp"
                android:layout_gravity="center"
                android:visibility="visible"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.taas.driver.typeface.TypeFaceMuseoRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__pick_up_point"
                android:textColor="@color/green"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.taas.driver.typeface.TypeFaceMuseoRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:id="@+id/pickup_address_txt"
                android:text="-----------------------------------"
                android:textColor="@color/pure_black" />

            <com.taas.driver.typeface.TypeFaceMuseoRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__note_this_request_will_be_automatically_rejected_in_30_seconds"
                android:layout_marginTop="10dp"
                android:textColor="@color/icons_8_muted_red"
                android:textSize="12dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/cash_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:id="@+id/main_layout_payment_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/WEEKLY_STATEMENT_ACTIVITY__payment_mode"
                        android:textColor="@color/pure_white" />

                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:id="@+id/main_layout_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/WEEKLY_STATEMENT_ACTIVITY__cash"
                        android:textColor="@color/pure_white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_layout"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:id="@+id/pay_with_card_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/WEEKLY_STATEMENT_ACTIVITY__payment_mode"
                        android:textColor="@color/pure_white" />


                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:id="@+id/pay_with_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/WEEKLY_STATEMENT_ACTIVITY__card"
                        android:textColor="@color/pure_white" />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">






                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/round_bg_color_black"
                    android:gravity="center"
                    android:id="@+id/accept_btn">

                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/RECEIVE_RENTAL_PASSENGER_ACTIVITY__accept"
                        android:textColor="@color/pure_white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>



        </LinearLayout>
    </LinearLayout>





</ScrollView>
