<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_marginLeft="-3dp"
    android:layout_marginRight="-3dp"
    android:layout_marginTop="1dp"
    android:orientation="vertical"
    android:id="@+id/root">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/pure_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:id="@+id/tv_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:text="------------"
                        android:textColor="@color/icon_8_muted_black"
                        android:textSize="15dp"
                        android:singleLine="true"
                        geekui:customTypeface="OpenSans_Regular.ttf" />


                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:text="@string/rental_type"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:paddingRight="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center|left">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/dot_green"
                    android:tint="@color/green"/>

                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:id="@+id/tv_pickup_addresss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center|left"
                    android:maxLines="2"
                    android:text="--------------"
                    android:textColor="@color/pure_black"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:id="@+id/drop_locatipon_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_red"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/dot_red"
                    android:tint="@color/pure_red"/>

                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:id="@+id/tv_drop_addresss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center|left"
                    android:text="-------"
                    android:textColor="@color/pure_black"
                    android:textSize="11dp"
                    android:maxLines="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center|left">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivUserImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:civ_border_color="@color/dark_gray"
                        app:civ_border_width="0.8dp"
                        android:src="@drawable/ic_profile"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center|left"
                        android:paddingLeft="5dp">

                        <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/pure_black"
                            android:id="@+id/customer_name_txt"
                            android:text="-----------"/>
                        <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----------"
                            android:id="@+id/customer_phone_txt"
                            android:textColor="@color/pure_black"/>


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.3"
                    android:gravity="center">
                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-------------"
                        android:id="@+id/tv_status"
                        android:textSize="15dp"
                        android:textColor="@color/pure_black"/>
                </LinearLayout>
            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimary"
                    android:alpha="0.7"
                    android:layerType="software"/>

        </LinearLayout>








</LinearLayout>
