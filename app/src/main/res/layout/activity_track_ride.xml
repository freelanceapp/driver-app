                <!--android:visibility="gone"-->
                <!--android:layout_margin="5dp"-->
                <!--android:textColor="@color/pure_white"-->
                <!--android:textStyle="bold"/>-->

        </LinearLayout>
    </LinearLayout>




</LinearLayout>