<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:background="@color/tracking_theme">

    <include layout="@layout/test"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:visibility="visible"/>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone">
                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ac = 9909899"
                        android:id="@+id/acc_txt"
                        android:padding="5dp"/>
                </android.support.v7.widget.CardView>
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".MapsActivity" />
                <LinearLayout
                    android:id="@+id/bottomLocationLayout"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical"
                    android:layout_margin="10dp"
                    android:layout_gravity="bottom|left"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_bg_color_black"
                    android:visibility="gone"
                    >

                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:src="@drawable/track_user"
                       android:tint="@color/pure_white"
                       android:layout_marginLeft="10dp"
                       />
                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:id="@+id/location_text_copy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAllCaps="true"
                        android:lines="2"
                        android:textSize="10sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/dark_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:id="@+id/sos"
                    android:background="@drawable/black_circle"
                    android:visibility="visible">
                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOS"
                        android:textAllCaps="true"
                        android:textColor="@color/pure_white"/>
                </LinearLayout>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    android:src="@drawable/ic_gps"
                    android:tint="@color/pure_black"
                    app:elevation="10dp"
                    app:backgroundTint="@color/pure_white"
                    android:layout_gravity="top|end"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center|left"
                    android:visibility="gone"
                    android:layout_gravity="center|top"
                    android:padding="15dp"
                    android:id="@+id/message_layout"

                    android:background="@color/pure_black"
                    android:alpha="0.7">
                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:textSize="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/new_message"/>
                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:id="@+id/chat_message"
                        android:textColor="@color/pure_white"
                        android:text="@string/in_coning_message_frpom_user_user_user_user_user_user_user_user_user_user_user_user_user_app_app_app_app_app_app_app_app_app"
                        android:gravity="center|left"
                        android:maxLines="2"/>


                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:id="@+id/msgViewBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/click_to_view"
                        android:layout_gravity="end"
                        android:background="@drawable/white_oval_border"
                        android:textColor="@color/pure_white"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"

                        android:gravity="center|right"/>

                </LinearLayout>


            </FrameLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/pure_white"
        android:gravity="center">
        <com.taas.driver.typeface.TypeFaceMuseoRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connectivity_status_development_purpose"
            android:id="@+id/connectivity_status"/>
    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:background="@color/icons_8_muted_blueblack">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_steering_wheel"
                android:tint="@color/pure_white"/>


            <com.taas.driver.typeface.TypeFaceMuseoRegular
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="------------------------------- "
                android:gravity="center|left"
                android:layout_weight="1"
                android:maxLines="2"
                android:padding="5dp"
                android:textSize="10dp"
                android:textColor="@color/pure_white"
                android:textStyle=""
                android:id="@+id/your_location_txt"/>

            <customviews.typefacesviews.TypefaceDigitalFont
                android:layout_width="190dp"
                android:layout_height="fill_parent"
                android:text="0.0"
                android:gravity="center"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:textSize="17dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/green_filled_corner"
                android:textColor="@color/pure_white"
                android:id="@+id/meter_txt"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:layout_gravity="center|bottom">


            <include
                android:layout_below="@+id/ll_cus_name"
                layout="@layout/btn_type_1"
                android:layout_width="fill_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:layout_height="fill_parent" />

            <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                android:id="@+id/cancel_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/TRACK_RIDE_ACTIVITY__cancel_trip"
                android:visibility="visible"
                android:textStyle="bold"
                android:textColor="@color/pure_white"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textAllCaps="true"
                android:background="@drawable/round_bg_color_gray"/>

            <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                android:id="@+id/trip_status_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/TRACK_RIDE_ACTIVITY__trip_status"
                android:visibility="visible"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/pure_black"
                android:layout_margin="5dp"
                android:background="@drawable/round_bg_color_green"/>

            <!--<include-->
                <!--android:id="@+id/trip_status_txt"-->
                <!--android:layout_below="@+id/ll_cus_name"-->
                <!--layout="@layout/button_type_material"-->
                <!--android:layout_width="fill_parent"-->
