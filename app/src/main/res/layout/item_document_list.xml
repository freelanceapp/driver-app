<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:padding="10dp"
    android:id="@+id/root_element"
    android:background="@color/pure_white">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:orientation="vertical">

        <com.taas.driver.typeface.TypeFaceMuseoRegular
            android:id="@+id/document_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driving_licence"
            android:textColor="@color/icon_8_muted_black" />




    </LinearLayout>


    <com.taas.driver.typeface.TypeFaceMuseoRegular
        android:id="@+id/document_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_sumitted"
        android:textColor="@color/icons_8_muted_grey" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="5dp"
        android:tint="@color/icons_8_muted_grey"
        android:src="@drawable/ic_right"/>

</LinearLayout>