<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:arc="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/pure_black">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/menu"
                android:tint="@color/pure_white"
                android:layout_gravity="center_vertical"
                android:src="@drawable/menu1"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                >
                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/progress_wheel"
                    android:textColor="@color/icon_8_muted_black"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/taas_driver_logo_white"
                    android:tint="@color/pure_white"
                    android:id="@+id/status_image"
                    android:scaleType="centerInside"/>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_bg_color_white"
                    android:padding="20dp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/status_btn"
                    app:cardBackgroundColor="@color/pure_white"
                    app:cardCornerRadius="15dp"
                    >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal"
                       android:gravity="center">

                       <ImageView
                           android:id="@+id/ivDot"
                           android:layout_width="5dp"
                           android:layout_height="5dp"
                           android:src="@drawable/circle_white"
                           android:tint="@color/dark_gray"
                           android:layout_margin="5dp"/>
                       <com.taas.driver.typeface.TypeFaceMuseoRegular
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/MAIN_ACTIVITY__off_duty"
                           android:id="@+id/status_txt"
                           android:gravity="center"
                           android:textSize="14sp"
                           android:textStyle="bold"
                           android:textColor="@color/dark_gray"/>


                   </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center|top"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/pure_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:gravity="center|right">
                <com.taas.driver.typeface.TypeFaceTextMeseoBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acc ="
                    android:layout_marginLeft="5dp"
                    android:id="@+id/accuracy"/>

                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/driver_id"
                    android:text=""
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"/>


                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="10dp"
                    android:id="@+id/lat_txt"
                    android:layout_marginRight="10dp"/>

                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:id="@+id/long_txt"
                    android:layout_marginRight="10dp"
                    android:text=""/>
            </LinearLayout>

            <com.taas.driver.typeface.TypeFaceMuseoRegular
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/pure_white"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="12dp"
                android:text=""
                android:textColor="@color/icons_8_muted_greydark"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
