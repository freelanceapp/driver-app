<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/left_side_msg_layout"
        android:layout_width="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/round_right_black"
        >

        <com.taas.driver.typeface.TypeFaceMuseoRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/left_txt"
            android:layout_gravity="center|left"
            android:text="trtrwutruyrewtrewtwtytrwgdgddgdgddgd"
            android:textColor="@color/pure_white"/>



    </LinearLayout>
    <morxander.zaman.ZamanTextView
        android:layout_width="wrap_content"
        android:layout_gravity="center|start"
        android:textSize="12dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:id="@+id/left_date"
        android:padding="0dp"

        android:text=""/>

    <LinearLayout
        android:id="@+id/right_side_msg_layout"
        android:layout_width="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_left_gray"
        >

        <com.taas.driver.typeface.TypeFaceMuseoRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/right_text"
            android:layout_gravity="center|right"
            android:text="trtrwutruyrewtrewtwtytrwgdgddgdgddgd"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

    <morxander.zaman.ZamanTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/right_date"
        android:layout_marginTop="0dp"
        android:maxLines="1"
        android:text=""
        android:layout_gravity="end"
        android:minWidth="70dp"
        android:layout_weight="1"
        android:padding="5dp"/>


</LinearLayout>




