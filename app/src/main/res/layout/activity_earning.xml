<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pure_white"
    android:orientation="vertical"
    tools:context="com.apporio.taasdriver.earnings.EarningActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="-2dp"
        android:layout_marginLeft="-2dp"
        app:cardBackgroundColor="@color/pure_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/pure_white"
            android:gravity="center|left"
            android:orientation="horizontal"
       >

            <LinearLayout
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/pure_white">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_back_arrow"
                    android:tint="@color/pure_black"
                    android:padding="5dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center|right"
                android:layout_marginRight="5dp"
                android:text="@string/EARNINF_ACTIVITY__your_earning"
                android:textColor="@color/pure_black"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pure_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/pure_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/another_week_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dateTV"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="---- to  -----"
                            android:textColor="@color/icons_8_muted_grey" />

                        <TextView
                            android:id="@+id/week_view_change_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click To View another week"
                            android:textColor="@color/pure_black" />
                    </LinearLayout>


                </LinearLayout>


                <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="255dp"/>

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginRight="-2dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/pure_white"
                        android:orientation="horizontal">


                        <View
                            android:layout_width="0.2dp"
                            android:layout_height="match_parent"
                            android:background="@color/icons_8_muted_grey" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center|top"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="@string/EARNING_ACTIVITY__total_outstanding_if_any"
                                android:textColor="@color/icons_8_muted_grey"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/totalSummaryTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/pure_black"
                                android:textSize="45dp" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/viewFullSummLL"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="0.5dp"
                        android:background="@drawable/round_bg_color_black"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/EARNING_ACTIVITY__view_full_summary"
                            android:textAllCaps="true"
                            android:textColor="@color/pure_white"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/pure_white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_left_sort_white"
                android:tint="@color/colorPrimary" />
        </RelativeLayout>



    </LinearLayout>

</LinearLayout>
