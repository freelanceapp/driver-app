<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pure_black"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/pure_black">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:paddingLeft="20dp">

        <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_centerInParent="true">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_white"

                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="55dp"
                    android:layout_gravity="center"
                    app:civ_border_color="@color/dark_gray"
                    app:civ_border_width="1dp"
                    android:layout_height="55dp"
                    android:src="@drawable/dummy_pic" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_camera"
                    android:visibility="gone"
                    android:layout_gravity="bottom|right"/>


            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                    android:id="@+id/tv_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text=""
                    android:singleLine="true"
                    android:textColor="@color/pure_white"
                    android:textSize="14dp" />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center">

                   <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                       android:id="@+id/tv_profile_rating"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="15dp"
                       android:text=""
                       android:singleLine="true"
                       android:alpha="0.8"
                       android:textColor="@color/pure_white"
                       android:textSize="14sp"
                       />

                   <ImageView
                       android:layout_width="10dp"
                       android:layout_height="10dp"
                       android:src="@drawable/ic_star"
                       android:layout_marginLeft="4dp"
                       android:tint="@color/pure_white"/>
               </LinearLayout>


                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:id="@+id/tv_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text=""
                    android:visibility="gone"
                    android:singleLine="true"
                    android:textColor="@color/pure_white"
                    android:textSize="14dp" />


            </LinearLayout>

        </LinearLayout>

          <ImageView
              android:id="@+id/closeDrawer"
              android:layout_width="35dp"
              android:layout_height="35dp"
              android:src="@drawable/menu_back"
              android:layout_marginRight="10dp"
              android:padding="5dp"
              android:layout_marginEnd="10dp"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"
              android:tint="@color/pure_white"
              android:visibility="gone"/>

          <ImageView
              android:id="@+id/editProfile"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:padding="5dp"
              android:visibility="gone"
              android:src="@drawable/profile_edit"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginEnd="10dp"
              android:layout_marginRight="10dp"
              />
      </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:visibility="gone"
            android:background="@drawable/dotted_white"
            android:layerType="software"/>
        <include android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/driver_main_bottom_view"
            android:background="@color/pure_white"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/dotted_white"
            android:layerType="software"
            android:layout_marginRight="60dp"
            android:visibility="gone"
            android:layout_marginEnd="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/pure_black">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="25dp"
                        android:visibility="gone"
                        android:background="@color/pure_black"
                        android:id="@+id/profile_menu_btn">

                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_height"
                            android:layout_marginRight="10dp"
                            android:tint="@color/pure_white"
                            android:visibility="gone"
                            android:src="@drawable/ic_profile_circular"/>
                        <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="@string/MAIN_ACTIVITY__profile"
                            android:textSize="@dimen/menu_text_size"
                            android:textColor="@color/pure_white"
                            android:gravity="center|left"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/my_upcoming_menu_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="gone"
                        android:paddingLeft="25dp"
                        android:background="@color/pure_black">

                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_height"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_trips"
                            android:tint="@color/pure_white"
                            android:visibility="gone"/>

                        <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                            android:layout_width="fill_parent"
                            android:textSize="@dimen/menu_text_size"
                            android:layout_height="fill_parent"
                            android:text="@string/MAIN_ACTIVITY__upcoming_rides"
                            android:textColor="@color/pure_white"
                            android:gravity="center|left"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="25dp"
                        android:id="@+id/my_rides_menu_btn"
                        android:background="@color/pure_black">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_height"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_trips"
                            android:tint="@color/pure_white"
                            android:visibility="gone" />

                        <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                            android:layout_width="fill_parent"
                            android:textSize="@dimen/menu_text_size"
                            android:layout_height="fill_parent"
                            android:text="@string/MAIN_ACTIVITY__my_rides"
                            android:textColor="@color/pure_white"
                            android:gravity="center|left"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="25dp"
                        android:id="@+id/my_earnings_menu_btn"
                        android:background="@color/pure_black">
                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_height"
                            android:tint="@color/pure_white"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_earning"/>
                        <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                            android:id="@+id/typeFaceTextMonixRegular2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:text="@string/MAIN_ACTIVITY__earnings"
                            android:textColor="@color/pure_white"
                            android:textSize="@dimen/menu_text_size" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="25dp"
                        android:id="@+id/notification_menu_btn"
                        android:background="@color/pure_black">
                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_height"
                            android:tint="@color/pure_white"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_notifications"/>
                        <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:text="@string/MAIN_ACTIVITY__notifications"
                            android:textColor="@color/pure_white"
                            android:textSize="@dimen/menu_text_size" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="25dp"
                        android:id="@+id/report_issue"
                        android:visibility="gone"
                        android:background="@color/pure_black">
                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_height"
                            android:tint="@color/pure_white"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/report"/>
                        <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center|left"
                            android:text="@string/report_issue"
                            android:textColor="@color/pure_white"
                            android:textSize="@dimen/menu_text_size" />


                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:visibility="gone"
                    android:layout_marginRight="100dp"
                    android:layout_marginEnd="100dp"
                    android:background="@drawable/dotted_white"
                    android:layerType="software"

                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_margin="20dp"/>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:visibility="gone"
                    android:id="@+id/language_menu_btn"
                    android:background="@color/pure_black">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:tint="@color/pure_white"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_language"/>
                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textSize="@dimen/menu_text_size"
                        android:text="@string/language"
                        android:textColor="@color/pure_white"
                        android:gravity="center|left"/>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:visibility="gone"
                    android:background="@drawable/dotted_white"
                    android:layout_marginRight="100dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layerType="software"/>









                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:visibility="visible"
                    android:id="@+id/customer_support_menu_btn"
                    android:background="@color/pure_black">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:tint="@color/pure_white"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/call"
                        android:visibility="gone"/>

                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:id="@+id/typeFaceTextMonixRegular"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="@string/MAIN_ACTIVITY__customer_support"
                        android:textColor="@color/pure_white"
                        android:textSize="@dimen/menu_text_size" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:visibility="gone"
                    android:id="@+id/terms_and_condition_menu_btn"
                    android:background="@color/pure_black">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:tint="@color/pure_white"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_terms_condition"/>
                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textSize="@dimen/menu_text_size"
                        android:text="@string/MAIN_ACTIVITY__terms_and_condition"
                        android:textColor="@color/pure_white"
                        android:gravity="center|left"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:id="@+id/about_menu_btn"
                    android:visibility="gone"
                    android:background="@color/pure_black">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:tint="@color/pure_white"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_about_us"/>
                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textSize="@dimen/menu_text_size"
                        android:text="@string/MAIN_ACTIVITY__about_us"
                        android:textColor="@color/pure_white"
                        android:gravity="center|left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:id="@+id/settings_menu_btn"
                    android:background="@color/pure_black">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:tint="@color/pure_white"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_settings_black_24dp"/>

                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="Settings"
                        android:textColor="@color/pure_white"
                        android:textSize="@dimen/menu_text_size" />
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/dotted_white"
                    android:layerType="software"
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginEnd="100dp"/>









                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:id="@+id/ll_logout"
                    android:background="@color/pure_black">

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:tint="@color/pure_white"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_logout"/>

                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="@string/PROFILE_ACTIVITY__logout"
                        android:textColor="@color/pure_white"
                        android:textSize="@dimen/menu_text_size" />
                </LinearLayout>



            </LinearLayout>

        </ScrollView>
    </LinearLayout>



</android.support.v7.widget.CardView>
