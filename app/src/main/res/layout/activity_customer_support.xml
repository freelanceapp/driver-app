<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="#fff"
    tools:context=".CustomerSupportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorHeader"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_back_about"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_back_arrow"
                    android:tint="@color/colorPrimary"
                    android:padding="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">


            </LinearLayout>

            <com.taas.driver.typeface.TypeFaceMuseoRegular
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/customer_support"
                android:textSize="17sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/CUSTOMER_SUPPORT_ACTIVITY__got_a_query"
                    android:textColor="@color/colorPrimary" />

                <com.taas.driver.typeface.TypeFaceMuseoRegular
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/CUSTOMER_SUPPORT_ACTIVITY_query_msg"
                    android:textSize="10dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                       <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/CUSTOMER_SUPPORT_ACTIVITY__your_name"
                            android:textColor="@color/icons_8_muted_grey"
                            android:textSize="10dp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_profile_circular"
                            android:tint="@color/icons_8_muted_grey" />

                        <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textSize="20dp"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/user_name_edt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:hint="@string/full_name"
                        android:text=""
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/pure_black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_send_mail"
                            android:tint="@color/icons_8_muted_grey" />

                       <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/CUSTOMER_SUPPORT_ACTIVITY__email"
                            android:layout_weight="1"
                            android:textColor="@color/icons_8_muted_grey"
                            android:textSize="10dp" />

                       <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/email_edt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="16dp"
                        android:hint="@string/email"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/pure_black"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_phone"
                            android:tint="@color/icons_8_muted_grey" />

                       <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/CUSTOMER_SUPPORT_ACTIVITY__phone"
                            android:textSize="10dp" />



                    </LinearLayout>

                    <EditText
                        android:id="@+id/pone_edt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:inputType="number"
                        android:hint="@string/CUSTOMER_SUPPORT_ACTIVITY__phone"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/pure_black"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_pencil"
                            android:tint="@color/icons_8_muted_grey" />

                       <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/CUSTOMER_SUPPORT_ACTIVITY__your_query"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/query_edt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="left|top"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:hint="@string/CUSTOMER_SUPPORT_ACTIVITY__your_query"
                        android:textSize="16dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/pure_black"/>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/send"
        android:textSize="17dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/pure_white"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:id="@+id/send_btn"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_bg_color_black"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
