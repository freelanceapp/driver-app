<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorHeader"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_back_signup"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:src="@drawable/ic_back_arrow"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical">

            <com.taas.driver.typeface.TypeFaceMuseoRegular
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/pure_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/pure_white">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/iv_profile_pic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/black_circle"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:background="@drawable/white_circle_border">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/driver_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/profile_user"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iv_profile_pic_upload"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/iv_profile_pic"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-20dp"
                        android:gravity="center"
                        android:background="@drawable/white_circle_black_border">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/profile_edit"
                            android:layout_gravity="center"
                            android:tint="@color/pure_black"/>

                    </LinearLayout>


                </RelativeLayout>
