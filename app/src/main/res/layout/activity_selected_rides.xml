<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selected_rides"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pure_white"
    tools:context="com.taas.driver.SelectedRidesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorHeader"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_back_ride_select"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:src="@drawable/ic_back_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical">

            <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                android:id="@+id/tv_date_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/SELECTED_RIDE_ACTIVITY__ride_details"
                android:textColor="@color/pure_black"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                geekui:customTypeface="OpenSans_Bold.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorView"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/ll_driver_ki_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:background="@color/pure_white">



                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_image_driver"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_user"
                        app:civ_border_width="1.5dp"
                        app:civ_border_color="@color/dark_gray"
                        android:padding="5dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:id="@+id/customer_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-------"
                            android:textStyle="bold"
                            android:textColor="@color/pure_black"
                            android:textSize="16sp"/>

                        <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:id="@+id/customer_phone_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="------- "
                            android:textColor="@color/pure_black"
                            android:textSize="12sp" />

                        <RatingBar
                            android:id="@+id/rating_selected"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_bill"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/tv_car_ima"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/timer"
                        android:visibility="gone"/>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:orientation="horizontal">



                        <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:id="@+id/tv_rupee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="---"
                            android:textColor="@color/pure_black"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@color/pure_white">

                        <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:id="@+id/tv_dis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="---"
                            android:textColor="@color/pure_black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/distance_symbol"
                            android:textColor="@color/icons_8_muted_blueblack_dark"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:id="@+id/tv_time1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="------"
                        android:textColor="@color/pure_black"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorView" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@color/pure_black"
                  android:paddingTop="20dp"
                  android:visibility="visible">
                <LinearLayout
                    android:id="@+id/ll_location_module"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@color/pure_black">

                    <com.taas.driver.typeface.TypeFaceTextMeseoSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/SELECTED_RIDE_ACTIVITY__trip_detail"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/pure_white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:paddingRight="15dp">

                        <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:id="@+id/start_time_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textColor="@color/light_white"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/dot_green" />

                        <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:id="@+id/tv_start_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:text="--------------------------"
                            android:textColor="@color/pure_white"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:paddingRight="15dp">

                        <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:id="@+id/drop_time_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--:--"
                            android:textColor="@color/light_white"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/dot_red" />

                        <com.taas.driver.typeface.TypeFaceMuseoRegular
                            android:id="@+id/tv_end_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:text="---------------------------"
                            android:textColor="@color/light_white"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="10dp"
                      android:layout_marginLeft="60dp"
                      android:layout_marginRight="60dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:background="@drawable/dotted_white"
                      android:layerType="software"/>


                  <include layout="@layout/selected_ride_layout_element" />

              </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_track_ride"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_bg_color_black"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                   <ImageView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/ic_trips"
                       android:tint="@color/pure_white"/>
                    <com.taas.driver.typeface.TypeFaceMuseoRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SELECTED_RIDE_ACTIVITY__go_to_your_current_ride"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/pure_white"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorView"
        android:visibility="gone"/>











</LinearLayout>
