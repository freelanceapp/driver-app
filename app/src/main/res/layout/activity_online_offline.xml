<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    app:cardCornerRadius="80dp"
    app:cardBackgroundColor="@color/pure_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center|right"
            android:visibility="gone">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:id="@+id/close_btn">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cross_close"
                    android:tint="#c7c7c7"/>
            </RelativeLayout>
        </LinearLayout>

        <customviews.typefacesviews.TypefaceDosisRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="16dp"
            android:text="@string/ONLINE_OFFLINE_ACTIVITY__currently_you_are_off_duty_please_turn_on_your_duty_on_in_order_to_get_rides_in_you_area"
            android:textColor="@color/icon_8_muted_black"
            android:id="@+id/status_description_txt"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/off_duty"
            android:tint="@color/light_gray"
            android:id="@+id/status_image" />

        <customviews.typefacesviews.TypefaceDosisRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ONLINE_OFFLINE_ACTIVITY__current_status"
            android:textColor="@color/icon_8_muted_black"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <customviews.typefacesviews.TypeFaceTextMonixBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ONLINE_OFFLINE_ACTIVITY__on_duty"
            android:textAllCaps="true"
            android:textColor="@color/light_gray"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/status__txt"/>


        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="20dp"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@color/green"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/status_btn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ONLINE_OFFLINE_ACTIVITY__go_on_duty"
                    android:textAllCaps="true"
                    android:textColor="@color/pure_black"
                    android:id="@+id/btn_txt"
                    android:textStyle="bold"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v7.widget.CardView>
